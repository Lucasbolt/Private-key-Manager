{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@commands/*": ["src/cli/commands/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "test", "src/desktop/**/**"],
  "ts-node": {
      "require": ["tsconfig-paths/register"]
},
}